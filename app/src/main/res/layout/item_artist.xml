<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    >
<RelativeLayout
    android:id="@+id/containerMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgFoto"
        android:layout_width="@dimen/img.item.size"
        android:layout_height="@dimen/img.item.size"
        android:src="@drawable/ic_account_box_black"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/artis.hint.name"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="@dimen/main.padding.small"
        android:layout_toEndOf="@+id/imgFoto"
        android:layout_toRightOf="@id/imgFoto"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tvOrden"
        android:layout_toLeftOf="@+id/tvOrden"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvOrden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/artis.hint.orden"
        android:maxLines="2"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="@dimen/main.padding.small"
        android:drawableBottom="@drawable/ic_star_black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>

</android.support.v7.widget.CardView>